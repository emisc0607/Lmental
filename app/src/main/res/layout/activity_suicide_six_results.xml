<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_background"
    android:padding="16dp"
    android:layout_margin="16dp"
    tools:context=".suicide.SixthOption.SuicideSixResults">

    <ImageView
        android:id="@+id/ivSixBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_button_ic"/>

    <ImageView
        android:id="@+id/ivSixNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/next_button_ic"/>

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSixBack"
        android:id="@+id/ivSixBackground"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintBottom_toTopOf="@+id/ivSixResultsReturn"
        android:src="@drawable/sixth_subbackground_ic"/>

    <ImageView
        android:id="@+id/ivSixResultsReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/red_button_ic_sub"/>

    <TextView
        android:id="@+id/tvSixResultsText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/ivSixBackground"
        app:layout_constraintStart_toStartOf="@+id/ivSixBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivSixBackground"
        app:layout_constraintBottom_toBottomOf="@+id/ivSixBackground"
        android:text="@string/sConduct_six_one"/>
</androidx.constraintlayout.widget.ConstraintLayout>