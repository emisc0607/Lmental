<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".suicide.SecondOption.SOSubOptions.FamProblems.FamiliarVHelp"
    android:background="@color/suicideconduct_subbackground"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="350dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/main_background"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Conoces los tipos de violencia?"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#F16321"/>

            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Violencia física. Golpes, empujones, patadas, pellizcos y mordidas."
                android:gravity="start"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Violencia psicológica. Celos, insultos, humillaciones, infidelidad, rechazo, amenazas."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Violencia económica. Limitaciones de dinero que llevan a la dependencia y control."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Violencia sexual. Degradar o dañar el cuerpo de otra persona."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Violencia digital. Ciberacoso, pornografía, terrorismo, racismo, sexting y grooming."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_marginVertical="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Si estás viviendo esto:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#008037"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Informa a algún familiar que te pueda ayudar."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Llama a la línea de emergencia 911."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Puedes acudir al DIF o al Instituto Municipal de la Mujer (encuentras los datos en el directorio)."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="° Si sufres violencia digital, marca al 088."
                android:gravity="start"
                android:textSize="18dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFamiliarVHelpReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="128dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#F61E74"
        android:src="@drawable/ic_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>