<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="@color/sub_background"
    tools:context=".suicide.FifthOption.FiOSubOptions.SocialWheel">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSocialWheelReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="#F61E74"
        android:src="@drawable/ic_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSocialWheelSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="#DD1E0F"
        android:src="@drawable/baseline_help_outline_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fabSocialWheelSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Da click al botÃ³n para que selecciones manualmente los temas"/>

    <ImageView
        android:id="@+id/ivSocialWheelBase"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fabSocialWheelSelect"
        android:src="@drawable/fifth_option_personal_wheel_base"/>

    <ImageView
        android:id="@+id/ivSocialWheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/fifth_option_social_wheel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivSocialWheelBase"/>
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivSocialWheel"
        android:src="@drawable/fifth_option_personal_wheel_selector"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_man_24"
        app:layout_constraintStart_toStartOf="@id/ivSocialWheel"
        app:layout_constraintEnd_toEndOf="@id/ivSocialWheel"
        app:layout_constraintBottom_toBottomOf="@id/ivSocialWheel"
        app:layout_constraintTop_toTopOf="@id/ivSocialWheel"/>

    <Button
        android:id="@+id/bSpinSocialWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Girar"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivSocialWheel"
        android:backgroundTint="#843832"/>

</androidx.constraintlayout.widget.ConstraintLayout>