<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/sub_background"
    android:gravity="center"
    tools:context=".suicide.SecondOption.SOSubOptions.SuicideADConsumption">

    <ImageView
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:src="@drawable/a_d_consume_round_ic"/>

    <TextView
        android:layout_marginVertical="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Consumo de alcohol y drogas"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:textColor="#873A34"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_background"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="24sp"
                android:text="Al consumir drogas, se modifica tu percepción, sensaciones, pensamientos y formas de actuar, afectando las maneras de resolver un problema."/>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008037"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Da click al botón rojo si quieres saber más."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSADConsumptionReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="128dp"
            android:backgroundTint="#F61E74"
            android:src="@drawable/ic_return" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSADConsumptionHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F44336"
            android:src="@drawable/baseline_help_outline_24"/>

    </LinearLayout>

</LinearLayout>