<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/suicideconduct_subbackground"
    tools:context=".suicide.SecondOption.SOSubOptions.SchoolarStress.SchoolStressHelp">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FDEA73"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="128dp"
                android:layout_height="64dp"
                android:src="@drawable/sleep_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="busca una posición cómoda"
                android:textAllCaps="true"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/sConduct_secondOption_schoolStress_FirstHelp"
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="32dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#FDEA73">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="128dp"
                android:layout_height="64dp"
                android:src="@drawable/sit_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="desténsate"
                android:textAllCaps="true"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Sube tus hombros a la altura de tus oídos.\n\nTensa, tensa, tensa...\n\nY relájate lentamente."
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSchoolStressHelpReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="start"
        android:backgroundTint="#F61E74"
        android:src="@drawable/ic_return" />
</LinearLayout>