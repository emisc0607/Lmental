<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/suicideconduct_subbackground"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".suicide.FifthOption.FiOSubOptions.SocialWheelResults">

    <ImageView
        android:id="@+id/ivSocialWheelResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personal_wheel_skills_ic"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_background"
        android:layout_gravity="">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvSocialWheelResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sConduct_personalWheel_first_option_title"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:layout_marginBottom="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSocialWheelResultBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/sConduct_personalWheel_first_option_body"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSocialWheelResultsReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="start"
        android:backgroundTint="#F61E74"
        android:src="@drawable/ic_return" />

</LinearLayout>