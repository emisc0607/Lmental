<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sucideconduct_background"
    android:padding="16dp"
    tools:context=".suicide.FourthOption.SuicideFourth">

    <ImageView
        android:id="@+id/ivFourthOptionMain"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/fourth_option_main_ic"/>

    <ImageView
        android:id="@+id/ivFourthOptionVideo"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivFourthOptionMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:src="@drawable/video_ic"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#E1671D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFourthOptionVideo"
        app:layout_constraintStart_toEndOf="@+id/ivFourthOptionMain"
        android:text="¿Te ha pasado alguno de éstos? El video te presenta algunos tips que te pueden ayudar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSFourthActivityReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#F61E74"
        android:src="@drawable/ic_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHopelessness"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivFourthOptionMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/hoplessness_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desesperanza"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImpulsiveness"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toEndOf="@id/cvHopelessness"
        app:layout_constraintTop_toBottomOf="@+id/ivFourthOptionMain"
        app:layout_constraintEnd_toStartOf="@id/cvNegativeHelp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/impulsiveness_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impulsividad"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNegativeHelp"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toEndOf="@id/cvImpulsiveness"
        app:layout_constraintTop_toBottomOf="@+id/ivFourthOptionMain"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:src="@drawable/negativity_help_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negativa de buscar ayuda"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDefeatWithdrawal"
        android:layout_marginStart="16dp"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvHopelessness">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:src="@drawable/defeat_withdrawal_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derrota y atrapamiento"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPsychologicalPain"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toEndOf="@+id/cvDefeatWithdrawal"
        app:layout_constraintTop_toBottomOf="@+id/cvImpulsiveness"
        app:layout_constraintEnd_toStartOf="@+id/cvStress">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/psychological_pain_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dolor psicológico"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvStress"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toEndOf="@+id/cvPsychologicalPain"
        app:layout_constraintTop_toBottomOf="@+id/cvNegativeHelp"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/stress_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estrés"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAgitation"
        style="@style/SSecondOptionButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="64dp"
        app:layout_constraintTop_toBottomOf="@+id/cvPsychologicalPain"
        app:layout_constraintEnd_toEndOf="@id/cvSelfHate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/agitation_rec_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agitación"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelfHate"
        style="@style/SSecondOptionButton"
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toStartOf="@+id/cvAgitation"
        app:layout_constraintTop_toBottomOf="@+id/cvPsychologicalPain"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/self_hate_rec_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odio a si mismo"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>