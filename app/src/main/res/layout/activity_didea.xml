<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_background"

    tools:context=".suicide.FirstOption.FOSubOptions.DIdeaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/SFirstSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideas de muerte"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="64dp"
        app:cardBackgroundColor="@color/main_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvDIdea"
        app:cardCornerRadius="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                style="@style/DIdea"
                android:layout_width="wrap_content"
                android:layout_marginVertical="32dp"
                android:layout_height="wrap_content"
                android:text="Tienes pensamientos como:"/>

            <TextView
                style="@style/DIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *¨Deseo Estar Muerto¨"/>

            <TextView
                style="@style/DIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *¨Quiero hacerme daño¨"/>

            <TextView
                style="@style/DIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *¨Pienso en matarme¨"/>

            <TextView
                style="@style/DIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *¨Mi familia y amigos estarían mejor si muriera¨"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDIdeaReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#F61E74"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_return"/>

</androidx.constraintlayout.widget.ConstraintLayout>