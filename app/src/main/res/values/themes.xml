<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lmental" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SOptionButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SFirstSubtitle">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <style name="DIdea">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
</resources>